<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="130dp"
    android:padding="15dp"
    >

<TextView android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:maxLines="2"
          android:id="@+id/heading"
          android:textColor="@color/white"
          android:textSize="@dimen/heading_size"
          android:text="@string/Heading">
</TextView>

<TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/article_source"
        android:layout_below="@+id/heading"
        android:layout_marginTop="5dp"
        android:textColor="@color/lime"
        android:textSize="@dimen/article_source_size"
        android:text="@string/ArticleSource">
</TextView>

<TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/description"
        android:maxLines="3"
        android:layout_below="@+id/article_source"
        android:textSize="@dimen/description_size"
        android:layout_marginTop="5dp"
        android:textColor="@color/trans_white"
        android:text="@string/Description">
</TextView>

</RelativeLayout>